{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "gradle: build",
      "type": "shell",
      "command": "./gradlew",
      "args": ["build", "-x", "test"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gradle: test",
      "type": "shell",
      "command": "./gradlew",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gradle: test with coverage",
      "type": "shell",
      "command": "./gradlew",
      "args": ["test", "jacocoTestReport"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gradle: check",
      "type": "shell",
      "command": "./gradlew",
      "args": ["check"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gradle: shadowJar",
      "type": "shell",
      "command": "./gradlew",
      "args": ["shadowJar"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "gradle: clean",
      "type": "shell",
      "command": "./gradlew",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "maven: package",
      "type": "shell",
      "command": "mvn",
      "args": ["clean", "package", "-DskipTests"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "maven: test",
      "type": "shell",
      "command": "mvn",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "dev-server: start",
      "type": "shell",
      "command": "./scripts/dev-server.sh",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": ".*",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting minecraft server.*",
          "endsPattern": ".*Done.*"
        }
      }
    },
    {
      "label": "dev-server: stop",
      "type": "shell",
      "command": "./scripts/dev-server-stop.sh"
    },
    {
      "label": "dev-server: attach",
      "type": "shell",
      "command": "./scripts/dev-server-attach.sh"
    },
    {
      "label": "open: coverage report",
      "type": "shell",
      "command": "xdg-open",
      "args": ["${workspaceFolder}/build/reports/jacoco/test/html/index.html"],
      "linux": {
        "command": "xdg-open"
      },
      "osx": {
        "command": "open"
      },
      "windows": {
        "command": "start"
      }
    }
  ]
}
